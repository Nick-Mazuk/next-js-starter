{
    "name": "my-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "eslint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "check-types": "tsc --noemit",
        "lint": "npm run eslint && npm run check-types",
        "test": "jest",
        "test:watch": "npm run test -- --watch",
        "update-modules": "npm i @nick-mazuk/ui@latest @nick-mazuk/eslint-config@latest @nick-mazuk/tsconfig@latest @nick-mazuk/ui-config@latest @nick-mazuk/lib@latest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint"
        }
    },
    "jest": {
        "collectCoverage": true,
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>setup-test.ts"
        ],
        "transformIgnorePatterns": [
            "node_modules*@nick-mazuk*"
        ],
        "globalSetup": "jest-chance"
    },
    "dependencies": {
        "@hcaptcha/react-hcaptcha": "^0.2.1",
        "@nick-mazuk/lib": "^0.1.2",
        "@nick-mazuk/ui": "^0.1.5",
        "@nick-mazuk/ui-config": "^0.3.4",
        "@sentry/browser": "^5.22.3",
        "@sentry/integrations": "^5.22.3",
        "@sentry/node": "^5.22.3",
        "@sentry/webpack-plugin": "^1.12.1",
        "@tailwindcss/typography": "^0.2.0",
        "@zeit/next-source-maps": "0.0.4-canary.1",
        "classnames": "^2.2.6",
        "framer-motion": "^2.6.13",
        "globby": "^11.0.1",
        "next": "^9.5.5",
        "next-compose-plugins": "^2.2.0",
        "postcss-flexbugs-fixes": "^4.2.1",
        "postcss-preset-env": "^6.7.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "sitemap": "^6.3.2",
        "slugify": "^1.4.5",
        "swr": "^0.3.2",
        "tailwindcss": "^1.8.11"
    },
    "devDependencies": {
        "@nick-mazuk/eslint-config": "^0.3.5",
        "@nick-mazuk/tsconfig": "^0.1.1",
        "@types/classnames": "^2.2.10",
        "@types/enzyme": "^3.10.7",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/hcaptcha__react-hcaptcha": "^0.1.3",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.6.1",
        "@types/react": "^16.9.48",
        "@types/react-dom": "^16.9.8",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "babel-jest": "^26.6.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.6.1",
        "eslint": "^7.10.0",
        "husky": "^4.3.0",
        "jest": "^26.6.0",
        "jest-chance": "^0.1.8",
        "ts-jest": "^26.4.1",
        "typescript": "^3.9.7"
    }
}
