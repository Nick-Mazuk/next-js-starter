{
    "name": "next-js-starter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "npm run lint && npm run test && next build",
        "start": "next start",
        "eslint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "check-types": "tsc --noemit",
        "lint": "npm run eslint && npm run check-types",
        "test": "jest --passWithNoTests",
        "test:watch": "npm run test -- --watch",
        "update-modules": "npm i @nick-mazuk/ui@latest @nick-mazuk/eslint-config@latest @nick-mazuk/tsconfig@latest @nick-mazuk/ui-config@latest @nick-mazuk/lib@latest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint"
        }
    },
    "jest": {
        "collectCoverage": true,
        "setupFilesAfterEnv": [
            "<rootDir>setup-test.ts"
        ],
        "transformIgnorePatterns": [
            "node_modules*@nick-mazuk*"
        ],
        "globalSetup": "jest-chance"
    },
    "dependencies": {
        "@nick-mazuk/lib": "^0.6.1",
        "@nick-mazuk/ui": "^0.3.6",
        "@nick-mazuk/ui-config": "^0.4.1",
        "@sentry/browser": "^5.27.3",
        "@sentry/integrations": "^5.27.3",
        "@sentry/node": "^5.27.3",
        "@sentry/webpack-plugin": "^1.12.1",
        "@tailwindcss/typography": "^0.2.0",
        "@zeit/next-source-maps": "0.0.4-canary.1",
        "classnames": "^2.2.6",
        "framer-motion": "^2.9.4",
        "globby": "^11.0.1",
        "next": "^10.0.1",
        "next-compose-plugins": "^2.2.0",
        "postcss-flexbugs-fixes": "^4.2.1",
        "postcss-preset-env": "^6.7.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "sitemap": "^6.3.3",
        "slugify": "^1.4.6",
        "swr": "^0.3.8",
        "tailwindcss": "^1.9.6",
        "typescript": "^4.0.5",
        "validator": "^13.1.17"
    },
    "devDependencies": {
        "@nick-mazuk/eslint-config": "^0.4.1",
        "@nick-mazuk/tsconfig": "^0.1.1",
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.1",
        "@testing-library/user-event": "^12.2.0",
        "@types/classnames": "^2.2.11",
        "@types/hcaptcha__react-hcaptcha": "^0.1.4",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "babel-jest": "^26.6.3",
        "eslint": "^7.12.1",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-chance": "^0.1.8",
        "ts-jest": "^26.4.3"
    }
}
